{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf4salesdata"
		},
		"AzureDataLakeStorage_sink_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStorage_sink'"
		},
		"fs_localdatafolders_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'fs_localdatafolders'"
		},
		"AzureDataLakeStorage_sink_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adls4salesdata.dfs.core.windows.net/"
		},
		"fs_localdatafolders_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Users\\DataEng\\Desktop\\DataTeam (SQL+Python)\\Project\\sourcedata"
		},
		"fs_localdatafolders_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "DataEng"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf4salesdata_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureDataLakeStorage_sink_accountKey": {
						"value": "[parameters('AzureDataLakeStorage_sink_accountKey')]"
					},
					"fs_localdatafolders_password": {
						"value": "[parameters('fs_localdatafolders_password')]"
					},
					"AzureDataLakeStorage_sink_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorage_sink_properties_typeProperties_url')]"
					},
					"fs_localdatafolders_properties_typeProperties_host": {
						"value": "[parameters('fs_localdatafolders_properties_typeProperties_host')]"
					},
					"fs_localdatafolders_properties_typeProperties_userId": {
						"value": "[parameters('fs_localdatafolders_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}